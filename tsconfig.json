{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "ES2022",
    "moduleResolution": "bundler",
    "outDir": "dist",
    "rootDir": ".",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["jest", "aws-lambda", "node"],
    "allowJs": true,
    "typeRoots": ["./node_modules/@types"]
  },
  "include": [
    "src/**/*.ts",
    "__tests__/**/*.ts",
    "src/**/*.mjs",
    "__tests__/**/*.mjs"
  ],
  "exclude": [
    "node_modules",
    ".aws-sam",
    "dist"
  ]
}
