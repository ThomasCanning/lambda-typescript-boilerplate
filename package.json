{
  "name": "jmap-server",
  "description": "Serverless JMAP email server built with AWS",
  "version": "0.0.1",
  "private": true,
  "engines": {
    "node": ">=22.0.0"
  },
  "dependencies": {
    "@aws-sdk/client-cognito-identity-provider": "^3.922.0",
    "@aws-sdk/client-dynamodb": "^3.398.0",
    "@aws-sdk/lib-dynamodb": "^3.398.0",
    "esbuild": "^0.24.0",
    "jose": "^6.1.0"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.137",
    "@types/jest": "^29.5.12",
    "@types/node": "^24.9.1",
    "aws-sdk-client-mock": "^2.0.0",
    "jest": "^29.2.1",
    "ts-jest": "^29.2.5",
    "typescript": "^5.6.3",
    "yaml": "^2.8.1"
  },
  "scripts": {
    "test": "jest",
    "build": "tsc"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/__tests__/**/*.[jt]s?(x)",
      "**/?(*.)+(spec|test).[jt]s?(x)"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "__tests__/__mocks__",
      "__tests__/unit/lib/auth/__setup__",
      "/dist/"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": [
        "ts-jest",
        {
          "tsconfig": "tsconfig.json"
        }
      ]
    },
    "transformIgnorePatterns": [
      "node_modules/(?!jose)"
    ],
    "moduleNameMapper": {
      "^jose$": "<rootDir>/__tests__/__mocks__/jose.ts"
    }
  }
}
